<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="App5XamarinMob.Login"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:App5XamarinMob" Visual="Material">
    <StackLayout Margin="40,20" Spacing="50">
        <Image
            x:Name="IconLoginImg"
            Margin="0,0,0,20"
            Aspect="AspectFit"
            Scale="0.9"
            Source="Resources/image.png" />
        <StackLayout Spacing="50">
            <Frame BorderColor="#000">
                <Entry
                    x:Name="LoginEntry"
                    Margin="-20,-25"
                    Placeholder="Логин"
                    VerticalOptions="CenterAndExpand" />
            </Frame>
            <Frame BorderColor="#000">
                <Entry
                    x:Name="PasswordEntry"
                    Margin="-20,-25"
                    Placeholder="Пароль"
                    VerticalOptions="CenterAndExpand" />
            </Frame>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button
                x:Name="RigistrationPageBtn"
                CornerRadius="20"
                BackgroundColor="DeepSkyBlue"
                Clicked="RigistrationPageBtn_Clicked"
                HorizontalOptions="Start"
                Text="Зарегистрироваться" />
            <Button
                x:Name="LoginBtn"
                CornerRadius="20"
                BackgroundColor="DeepSkyBlue"
                Clicked="LoginBtn_Clicked"
                HorizontalOptions="EndAndExpand"
                Text="Войти" />
        </StackLayout>
    </StackLayout>
</ContentPage>